{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": ".",
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["./*.ts", "./*.tsx"]
} 